%h1.text-center Hangman Games

.container.col-md-4
.container.col-md-4
  %table.table.table-striped
    %thead
      %tr
        -# %th ID
        %th Board
        %th Status
    %tbody
      - @games.each do |game|
        %tr
          -# %td= link_to game.id, game # first parameter is what you want to show; second one is redirect_to
          %td= game.board
          %td
            = "#{game.misses} / #{game.max_misses}"
          %td
            %button= link_to 'Finish game', game # or game_path(game)
            %button= link_to 'Delete', game, method: :delete
.container.col-md-4
%br
.container.text-center
  = form_tag(method: "post") do
    %button.btn.btn-danger New Game

